#include <iostream>
using namespace std;
class SmallUnit {
public:
    SmallUnit(double inches) : value(inches) {}
    explicit operator double() const {
        return value / 12.0;  
    }

private:
    double value;  
};
class LargerUnit {
public:
  
    LargerUnit(double feet) : value(feet) {}
private:
    double value;  
};
int main() {
    SmallUnit su(24.0); // Create a SmallUnit object with 24 inches
    double feet = static_cast<double>(su);  // Explicit cast for clarity
    cout << "24 inches is equal to " << feet << " feet." << endl;
    LargerUnit lu(3.5);
    cout << "3.5 feet is " << lu.value << " feet." << endl;

    return 0;
}
